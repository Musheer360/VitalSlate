{
  "manifest_version": 3,
  "name": "VitalSlate",
  "version": "1.0.0",
  "description": "An open-source wellness companion with customizable reminders for healthy habits like eye care, movement, and posture.",
  "icons": {
    "16": "icons/icon16.png",
    "32": "icons/icon32.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icons/icon16.png",
      "32": "icons/icon32.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  },
  "permissions": ["storage", "notifications", "alarms", "background"],
  "background": {
    "service_worker": "background.js"
  },
  "author": "Musheer Alam",
  "homepage_url": "https://github.com/Musheer360/VitalSlate",
  "short_name": "VitalSlate",
  "offline_enabled": true,
  "minimum_chrome_version": "88"
}
